{
    "name": "Adversarial + Generalization Test",
    "dataset": {
        "name": "smallNORB",
        "input_shape": [96, 96, 1],
        "nb_classes": 5
    },
    "models": {
        "batch": {
            "class": "vgg",
            "name": "vgg_batch",
            "batch_size": 128,
            "group_size": 8,
            "norm_type": "batch",
            "eval": [ "batch" ]
        },
        "local": {
            "class": "vgg",
            "name": "vgg_local",
            "batch_size": 128,
            "group_size": 8,
            "norm_type": "local",
            "eval": [ "single", "single-voting", "voting", "batch" ]
        }
    },
    "train_conf": {
        "learning_rate": 0.0001,
        "epochs": 30,
        "data_split": {
            "train": 8,
            "val": 1,
            "test": 1
        },
        "data_conf": {
            "params": {
                "azimuth": [18,20,22,24,26,28,30,32,34],
                "lighting": [4,5,6]
            }
        }
    },
    "experiments": {
        "test": {
        },
        "original": {
            "params": {
                "azimuth": [18,20,22,24,26,28,30,32,34],
                "lighting": [4,5,6]
            }
        },
        "novel": {
            "params": {
                "azimuth": [0,2,4,6,8,10,12,14,16],
                "lighting": [0,1,2,3]
            }
        },
        "adv_fgm": {
            "adversarial": {
                "attack": "fgm"
            }
        },
        "original_adv_fgm": {
            "params": {
                "azimuth": [18,20,22,24,26,28,30,32,34],
                "lighting": [4,5,6]
            },
            "adversarial": {
                "attack": "fgm"
            }
        },
        "novel_adv_fgm": {
            "params": {
                "azimuth": [0,2,4,6,8,10,12,14,16],
                "lighting": [0,1,2,3]
            },
            "adversarial": {
                "attack": "fgm"
            }
        }
    }
}